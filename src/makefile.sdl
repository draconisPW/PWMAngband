########################### Explicit Rules ########################
$(CLI_EXE): $(CLI_OBJS) win\angband.res
	$(LINKER) -aa $(LDFLAGS) -x $(CLI_OBJS) c0x32.obj, $(CLI_EXE),, cw32mt.lib import32.lib ws2_32.lib SDL\SDL.lib SDL\SDL_ttf.lib SDL\SDL_image.lib SDL\SDL_mixer.lib,, win\angband.res

win\angband.res: win\angband.rc
	$(RC) -r win\angband.rc

########################### Implicit Rules ########################
.c.obj:
	$(CPP) $(CPPFLAGS) -o$*.obj -c {$? }

.c.i:
	$(CPP) $(CPPFLAGS) -c -Sr -Sd {$? }

.obj.exe:
	$(CPP) $(CPPFLAGS) $<

