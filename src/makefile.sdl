	-D_WIN32_WINNT=0x0500 -DWINVER=0x0500 \
	-DWIN32 -D_WINDOWS -DSTRICT \
	-D"USE_SDL" \
	-I$(BCCDIR)\include \
	-ISDL

LDFLAGS = -L$(BCCDIR)\lib -LSDL


# Compile flags:
CPPFLAGS= $(CCOPTS) $(DBGOPT)


